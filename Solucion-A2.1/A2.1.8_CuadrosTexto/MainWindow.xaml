<Window x:Class="A2._1._8_CuadrosTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario Persona"
        Height="250"
        Width="400"
        Icon="/Recursos/icon.ico">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Nombre -->
        <Label Grid.Row="0" Grid.Column="0" Content="Nombre:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="txtNombre" KeyDown="TxtNombre_KeyDown"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Name="lblAyudaNombre" Foreground="Blue" Visibility="Collapsed" VerticalAlignment="Center"/>

        <!-- Apellido -->
        <Label Grid.Row="1" Grid.Column="0" Content="Apellido:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtApellido" KeyDown="TxtApellido_KeyDown"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Name="lblAyudaApellido" Foreground="Blue" Visibility="Collapsed" VerticalAlignment="Center"/>

        <!-- Edad -->
        <Label Grid.Row="2" Grid.Column="0" Content="Edad:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="txtEdad" KeyDown="TxtEdad_KeyDown"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Name="lblErrorEdad" Foreground="Red" Visibility="Collapsed" VerticalAlignment="Center"/>
    </Grid>
</Window>
