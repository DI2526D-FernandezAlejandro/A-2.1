<Window x:Class="A2._1._3_Imagen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Imagen con Opacidad y Ajuste" Height="400" Width="600"
        Icon="/Recursos/icon.ico">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Imagen -->
            <ColumnDefinition Width="200"/>
            <!-- Selectores -->
        </Grid.ColumnDefinitions>

        <!-- Imagen -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <Image Name="imgFoto" Stretch="Uniform" Source="/Recursos/episodioIV.jpg"/>
        </Border>

        <!-- Panel de selectores al lado derecho -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock FontWeight="Bold" Margin="0,0,0,5">Opacidad</TextBlock>

            <StackPanel x:Name="spOpacidad">
                <RadioButton Content="● Alta (100%)" Tag="1.0" Checked="Opacidad_Checked"/>
                <RadioButton Content="● Media (60%)" Tag="0.6" Checked="Opacidad_Checked"/>
                <RadioButton Content="● Baja (30%)" Tag="0.3" Checked="Opacidad_Checked"/>
            </StackPanel>

            <TextBlock FontWeight="Bold" Margin="0,10,0,5">Ajuste (Stretch)</TextBlock>

            <StackPanel x:Name="spStretch" Margin="10,0,0,0">
                <RadioButton Content="● None" Tag="None" Checked="Stretch_Checked"/>
                <RadioButton Content="● Fill" Tag="Fill" Checked="Stretch_Checked"/>
                <RadioButton Content="● Uniform" Tag="Uniform" Checked="Stretch_Checked"/>
                <RadioButton Content="● UniformToFill" Tag="UniformToFill" Checked="Stretch_Checked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
