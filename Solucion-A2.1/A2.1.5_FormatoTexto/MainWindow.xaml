<Window x:Class="A2._1._5_FormatoTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formato de Texto" Height="350" Width="500"
        Icon="/Recursos/icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <!-- TextBox para escribir texto -->
        <TextBox Name="txtContenido" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 FontSize="16"/>

        <!-- Opciones de formato -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
            <CheckBox Name="chkNegrita" Content="Negrita" Checked="chkFormato_Changed" Unchecked="chkFormato_Changed" Margin="0,0,0,5"/>
            <CheckBox Name="chkCursiva" Content="Cursiva" Checked="chkFormato_Changed" Unchecked="chkFormato_Changed" Margin="0,0,0,10"/>

            <TextBlock Text="Color:" FontWeight="Bold"/>
            <RadioButton Content="Azul" GroupName="Color" Checked="rbColor_Checked" Tag="Blue" Margin="0,2,0,0"/>
            <RadioButton Content="Rojo" GroupName="Color" Checked="rbColor_Checked" Tag="Red" Margin="0,2,0,0"/>
            <RadioButton Content="Verde" GroupName="Color" Checked="rbColor_Checked" Tag="Green" Margin="0,2,0,0"/>
        </StackPanel>
    </Grid>
</Window>
